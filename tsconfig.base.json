{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@chrona/core-schema": [
        "packages/core-schema/src"
      ],
      "@chrona/source-registry": [
        "packages/source-registry/src"
      ],
      "@chrona/connectors": [
        "packages/connectors/src"
      ],
      "@chrona/db": [
        "packages/db/src"
      ]
    }
  }
}
